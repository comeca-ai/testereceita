{
  "name": "cnpj-api",
  "version": "1.0.0",
  "description": "API REST para consulta de dados de CNPJ",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "vitest run",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "cnpj-types": "workspace:*",
    "cnpj-core": "workspace:*",
    "cnpj-db": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.0",
    "zod": "^3.22.0",
    "swagger-ui-express": "^5.0.0",
    "express-rate-limit": "^7.0.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/compression": "^1.7.2",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0"
  }
}
